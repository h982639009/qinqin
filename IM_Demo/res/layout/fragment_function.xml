<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:id="@+id/relayout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/layout_function_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fun_drawboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="家庭涂鸦墙" />

            <TextView
                android:id="@+id/fun_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="亲密定位" />

            <TextView
                android:id="@+id/fun_sharemood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="心情共振" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_function_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_function_row1" >

            <TextView
                android:id="@+id/fun_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="便利贴" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="？？" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ue106"
                android:gravity="center_horizontal"
                android:text="？？" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relayout_content"
        android:layout_below="@id/common_actionbar"
        android:background="#2529" />

</RelativeLayout>